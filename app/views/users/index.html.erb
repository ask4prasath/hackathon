<div class="page-title">

  <div class="title-env">
    <h1 class="title">Manage Admins/users</h1>

    <p class="description">Add or remove admins</p>
  </div>

  <div class="breadcrumb-env">

    <ol class="breadcrumb bc-1">
      <li>
        <a href="/"><i class="fa-home"></i>Home</a>
      </li>
      <li class="active">
        <strong>Manage Admins</strong>
      </li>
    </ol>

  </div>

</div>


<div class="row">
  <div class="col-sm-12">
    <div class="xe-widget xe-counter">

<table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th>Email</th>
      <th>Role</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>

      <tr>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td><%= link_to 'Show', user %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, class: 'btn btn-primary', method: 'get' %>

</div>
</div>
</div>

